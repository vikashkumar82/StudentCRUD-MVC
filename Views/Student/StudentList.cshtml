@model List<StudentCRUD.context.Student>
@{
    ViewBag.Title = "StudentList";
}

<table class="table tab">
    <tr>
        <th>Name</th>
        <th>Father Name</th>
        <th>Email</th>
        <th>Phone-No</th>
        <th>Description</th>
        <th>Action</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Fname</td>
            <td>@item.Email</td>
            <td>@item.Phone</td>
            <td>@item.Description</td>
            <td>
                <a href="@Url.Action("Student", new { item.ID, item.Name, item.Fname, item.Email, item.Phone, item.Description })" class="btn btn-outline-success">Edit</a>
                <a href="@Url.Action("DeleteStudent", new {item.ID})" class="btn btn-outline-danger">Delete</a>
            </td>
        </tr>
        
    }
</table>

